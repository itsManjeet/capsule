New := fun (sz, fill) {
    if buf := alloc(sz); type(buf) == error {
        return buf;
    }
    for i in range(sz) {
        buf[i] = fill;
    }
    buf[sz] = 0;
    return str(buf);
};

_to_ascii := native (ptr) i8;
_to_str   := native (i8) ptr;

Lower := fun (s) {
    c := clone(s);
    _to_lower := native (ptr) i32;
    _to_lower(c);

    return c;
};

Upper := fun (s) {
    c := clone(s);
    _to_upper := native (ptr) i32;
    _to_upper(c);
    return c;
};

ToAscii := fun (s) {
    if len (s) == 1 {
        return _to_ascii (s[0]);
    }

    l := [];
    for i in range (s) {
        l = append (l, _to_ascii(i));
    }
    return l;
};


