char _to_ascii (const char* v) {
    return v[0];
}

char* _to_str (char val) {
    char buf[2] = { val, '\0' };
    return strdup (buf);
}

void _to_lower(char* p) {
for ( ; *p; ++p) *p = tolower(*p);
}

void _to_upper(char* p) {
for ( ; *p; ++p) *p = toupper(*p);
}

